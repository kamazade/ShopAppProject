@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-9">
        <h3 class="text-muted">Role List</h3>
    </div>
    <div class="col-md-3">
        <a asp-controller ="Admin" asp-action="RoleCreate" class="btn btn-outline-info">Create Role</a>
    </div>
</div><hr>
<div class="row">
    <div class="col-md-10 offset-1">
 
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width: 300px;">Id</td>
                    <td >Role Name</td>
                    <td class="text-center" style="width: 150px;"></td>
                  
                </tr>
            </thead>
            <tbody>
                @if (Model.Count()>0)
                {
                    @foreach (var role in Model)
                    {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td class="text-center">
                            <a class="btn btn-success btn-sm mr-2" href="/admin/role/@role.Id">Edit</a>
                            <form method="POST" asp-controller="Admin" asp-action="DeleteRole" style="display: inline;">
                                <input type="hidden" name="RoleId" value="@role.Id">
                                <button type="submit" class="btn btn-danger btn-sm mr-2 " >Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                }else
                {
                    <div class="alert alert-danger">
                        <h3>No Roles</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>