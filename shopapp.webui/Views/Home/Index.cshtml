  @model List<Product> 
    
    
    
    <partial name="_header">
     
 
<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        <partial name ="_search">
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col">


                @if (Model.Count() == 0)
                {
                    @await Html.PartialAsync("_noproduct")
                }else
                {
                    <div class="row">
                            @foreach (var P in Model)
                            {
                                <div class="col-md-4">
                                    @await Html.PartialAsync("_product_card",P)
                                </div>
                            }
                    </div>
                }
            </div>
        </div>

    </div>
</div>
