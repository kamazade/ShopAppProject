@model Product
<div class="card mb-3">
    <img class="card-img-top" src="~/images/@Model.ImageUrl" alt=""> 
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
        <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-outline-secondary btn-sm" asp-controller = "shop" asp-action="Details" asp-route-url = "@Model.Url">Details</a>
        @if(User.Identity.IsAuthenticated){
            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                <input type="hidden" name="productId" value="@Model.ProductId">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Add To Cart</button>
            </form>


        }
        
    </div>
</div>