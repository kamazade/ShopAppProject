@model ProductDetailModel

<partial name="_header">

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row no-gutters">
            <div class="col-md-3">
                    <img src="~/images/@Model.Product.ImageUrl" alt="" class="img-fluid">
            </div>
            <div class="col-md-9">

                <h5 class="mb-3">@Model.Product.Name</h5>
                <p class="card-text">
                    <small class="text-muted">3 days Ago</small>
                </p>
                @foreach (var item in Model.Categories)
                {
                <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                }

                <p class="text-muted">@Html.Raw(Model.Product.Desc)</p>

                <p class="card-text"><i class="fas fa-lira-sign"></i>  @Model.Product.Price</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline" >
                    <input type="hidden" name="productId" value="@Model.Product.ProductId">
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" width="100px">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-cart-plus"></i>
                                Add To Cart
                            </button>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


